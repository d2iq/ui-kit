{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "rootDir": "./",
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6", "dom"]
  },
  "include": ["./packages/index.ts"],
  "exclude": ["**/*.test.*", "**/*.stories.*"]
}
